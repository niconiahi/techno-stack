{
  "private": true,
  "version": "1.0.0",
  "name": "@niconiahi/web",
  "description": "From me, to you. All my information in one place",
  "license": "MIT",
  "author": "Nicolas Accetta",
  "sideEffects": false,
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production remix-serve build",
    "clean": "rm -rf .turbo && rm -rf node_modules",
    "deploy": "fly deploy --remote-only",
    "postinstall": "remix setup node",
    "build": "yarn run build:css && yarn run build:app",
    "build:css": "postcss styles --base styles --dir app/styles --env production",
    "build:app": "remix build",
    "dev": "pm2-dev pm2.config.js",
    "dev:css": "postcss styles --base styles --dir app/styles -w",
    "dev:app": "remix dev",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . -c .eslintrc.js --ext ts,tsx",
    "format": "yarn lint --fix"
  },
  "dependencies": {
    "@headlessui/react": "^1.6.3",
    "@niconiahi/web3": "*",
    "@prisma/client": "^3.12.0",
    "@remix-run/react": "^1.4.0",
    "@remix-run/serve": "^1.4.0",
    "@xstate/react": "^3.0.0",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "ethers": "^5.6.4",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "remix": "^1.4.0",
    "tiny-invariant": "^1.2.0",
    "xstate": "^4.32.0"
  },
  "devDependencies": {
    "@niconiahi/eslint-config": "*",
    "@niconiahi/testing": "*",
    "@niconiahi/tsconfig": "*",
    "@remix-run/dev": "^1.3.4",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "autoprefixer": "^10.4.4",
    "dotenv": "^16.0.0",
    "esbuild": "0.14.32",
    "pm2": "^5.2.0",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "postcss-import": "^14.1.0",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "prisma": "^3.12.0",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.6.3"
  }
}
